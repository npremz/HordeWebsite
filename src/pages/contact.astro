---
import Container from "../components/Container.astro";
import Layout from "../layouts/Layout.astro";
import Footer from '../components/Footer.astro';
import Carousel from '../components/Carousel.astro';
import Wrapped from "../components/Wrapped.astro";
import HorizontalLine from '../components/HorizontalLine.astro';
import ContactForm from "../components/ContactForm.astro";
---

<Layout title="Horde - Contact" theme="dark">
	<Container>
		<main>
			<section class="relative h-halfscreen flex flex-col items-center">
				<span class="absolute h-full w-circles border border-outlinedark -top-(--line-margin) left-1/2 -translate-x-1/2 rounded-b-full"></span>

				<Carousel text="Restons en contact" class="top-1/2 -translate-y-1/2 text-[2.25rem] sm:text-[3.25rem]"></Carousel>
				<Wrapped device='all' padding='0.625rem' class="absolute top-full -translate-y-24 md:-translate-y-28">
					â†“
				</Wrapped>
			</section>
            <HorizontalLine class="mt-2" theme="dark"></HorizontalLine>
			<ContactForm class="mx-(--line-margin) mt-10 md:mt-20"></ContactForm>
            <HorizontalLine class="mt-12 md:mt-20" theme="dark"></HorizontalLine>
		</main>
		<Footer class="mt-12 md:mt-20"></Footer>
	</Container>
</Layout>
