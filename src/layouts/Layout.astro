---
import '../styles/global.css';
import Header from '../components/Header.astro';

interface Props {
	title?: string;
}

const { title = 'Horde' } = Astro.props;
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header></Header>
		<span class="fixed h-full w-px top-0 left-4 bg-outline"></span>
		<slot />
		<span class="fixed h-full w-px top-0 right-4 bg-outline"></span>
	</body>
</html>
