---
import '../styles/global.css';
import Header from '../components/Header.astro';
import BackgroundCanvas from '../components/BackgroundCanvas.astro';

interface Props {
	title?: string;
	theme?: 'light' | 'dark';
}

const { title = 'Horde', theme = 'light' } = Astro.props;
const themeClass = theme === 'dark' ? 'bg-fonddark text-white [&_svg]:fill-white' : 'bg-fond text-fonddark [&_svg]:fill-fonddark';
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class={themeClass}>
		<Header></Header>
		<span class=`fixed h-full w-px md:w-10 md:border-x top-0 left-(--line-margin) ${theme === 'dark' ? 'bg-outlinedark md:border-outlinedark' : 'bg-outline md:border-outline'} md:bg-transparent -z-10000`></span>
		<slot />
		<span class=`fixed h-full w-px md:w-10 md:border-x top-0 right-(--line-margin) ${theme === 'dark' ? 'bg-outlinedark md:border-outlinedark' : 'bg-outline md:border-outline'} md:bg-transparent -z-10000`></span>
	</body>
</html>
