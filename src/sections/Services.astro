<style>
	@keyframes float
	{
		0%, 100%
		{
			transform: translate(0, 0);
		}
		50%
		{
			transform: translate(16px, -17px);
		}
	}

	@keyframes float-svg
	{
		0%, 100%
		{
			transform: translate(calc(0px), calc(0px));
		}
		50%
		{
			transform: translate(calc(-8px), calc(9px));

		}
	}

	@media (min-width: 1024px)
	{
		.float-item
		{
			position: absolute;
			animation: float 10s ease-in-out infinite;
		}

		.float-item:nth-child(1)
		{
			top: 38%;
			left: 11%;
			animation-delay: 0s;
		}

		.float-item:nth-child(2)
		{
			top: 48%;
			right: 11%;
			animation-delay: -3.3s;
		}

		.float-item:nth-child(3)
		{
			bottom: 12%;
			left: 30%;
			transform: translateX(-50%);
			animation-delay: -6.6s;
		}

		.float-svg
		{
			animation: float-svg 10s ease-in-out infinite;
		}

		.float-item:nth-child(1) .float-svg
		{
			animation-delay: 0s;
		}

		.float-item:nth-child(2) .float-svg
		{
			animation-delay: -3.3s;
		}

		.float-item:nth-child(3) .float-svg
		{
			animation-delay: -6.6s;
		}
	}
</style>
